<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-xs-12">
                        <!-- Default Welcome Message -->
                        <div class="welcome-msg hidden-xs hidden-sm">Hi! Welcome to ATOM Store </div>
                        <!-- Language &amp; Currency wrapper -->
                        @*<div class="language-currency-wrapper">
                                <div class="inner-cl">
                                    <div class="block block-language form-language">
                                        <div class="lg-cur"><span><img src="/client-side/images/flag-default.jpg" alt="French"><span class="lg-fr">French</span><i class="fa fa-angle-down"></i></span></div>
                                        <ul>
                                            <li><a class="selected" href="#"><img src="/client-side/images/flag-english.jpg" alt="english"><span>English</span></a></li>
                                            <li><a href="#"><img src="/client-side/images/flag-default.jpg" alt="French"><span>French</span></a></li>
                                            <li><a href="#"><img src="/client-side/images/flag-german.jpg" alt="German"><span>German</span></a></li>
                                            <li><a href="#"><img src="/client-side/images/flag-brazil.jpg" alt="Brazil"><span>Brazil</span></a></li>
                                            <li><a href="#"><img src="/client-side/images/flag-chile.jpg" alt="Chile"><span>Chile</span></a></li>
                                            <li><a href="#"><img src="/client-side/images/flag-spain.jpg" alt="Spain"><span>Spain</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>*@
                    </div>

                    <!-- top links -->
                    <div class="headerlinkmenu col-md-8 col-sm-8 col-xs-12">
                        <span class="phone  hidden-xs hidden-sm">Call Us: (+84) 0793699821</span>
                        <ul class="links">

                            <!-- MODIFIED HELP CENTER -->
                            <!-- MODIFIED STORE LOCATOR -->
                            @*<li><a title="Checkout" href="/checkout.html"><span>Checkout</span></a></li>*@
                            @if (User.Identity.IsAuthenticated)
                            {

                                <li>
                                    <div class="dropdown">
                                        <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>@User.GetSpecificClaim("FullName")</span> <i class="fa fa-angle-down"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="/accountsettings.html">Account Settings</a></li>
                                            <li><a href="/history.html">Order History</a></li>
                                            <li><a href="/wishlist.html">Wishlist</a></li>
                                                @*<li><a href="#">Order Tracking</a></li>*@
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                        <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>Logout</span></a>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a title="login" href="/login.html"><span>Login</span></a></li>
                                <li><a title="register" href="/register.html"><span>Register</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- header inner -->
        <div class="header-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-12 jtv-logo-block">

                        <!-- Header Logo -->
                        <div class="logo"><a title="e-commerce" href="/"><img alt="AtomStore" title="Atom Store" src="~/client-side/images/logoAtom.jpg"></a> </div>
                    </div>
                    <div class="col-xs-12 col-sm-5 col-md-6 jtv-top-search">

                        <!-- Search -->

                        <div class="top-search">
                            <div id="search">
                                <form method="get" action="/search.html">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Enter your search..." name="keyword">
                                        <button class="btn-search" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- End Search -->

                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3 top-cart">

                        <!-- MODIFIED WISHLIST -->
                        <div class="link-wishlist"> <a href="/wishlist.html"> <i class="icon-heart icons"></i><span> Wishlist</span></a> </div>
                        <!-- top cart -->
                        <div class="top-cart-contain">
                            <vc:header-cart></vc:header-cart>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- end header -->