@model AtomStore.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Home</a><span>&raquo;</span></li>
                    <li class="home"> <a title="Go to Home Page" href="/accountsettings.html">Account Settings</a><span>&raquo;</span></li>
                    <li><strong>Change Password</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->


@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="main container">
    <div class="resetPassword">CHANGE PASSWORD</div>
    <div class="subResetPassword">Password must be more than 8 characters.</div>
    <div class="page-content">
        <div class="account-login">
            <div class="col-md-3 col-sm-2"></div>
            <div class="col-md-6 col-sm-8">
                <div class="single-input p-bottom50 clearfix">
                    @*<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">*@
                    <form method="post">
                        <div class="row">
                            <div class="col-sm-12" style="padding-top: 3%;">
                                <label asp-for="OldPassword" style="margin-top:3%"></label>
                                <input asp-for="OldPassword" class="form-control" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12">
                                <label asp-for="NewPassword" style="margin-top:3%"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12">
                                <label asp-for="ConfirmPassword" style="margin-top:3%"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-xs-12">
                                <div class="submit-text">
                                    <button style="color:white; background-color:#222222; margin-top:3%;padding:2%; width:50%; float:right;" type="submit" class="btn btn-default">SAVE</button>
                                    <button onclick="location.href='/accountsettings.html'" style="color:#222222; background-color:white; margin-top:3%;padding:2%; width:50%; float:right;border:solid 1px;" type="button" class="btn btn-default">CANCEL</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- service section -->
<div class="jtv-service-area">
    <div class="container">
        <div class="row">
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper ship">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-paper-plane"></i></div>
                        <div class="service-wrapper">
                            <h3>World-Wide Shipping</h3>
                            <p>On order over $99</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12 ">
                <div class="block-wrapper return">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-rotate-right"></i></div>
                        <div class="service-wrapper">
                            <h3>30 Days Return</h3>
                            <p>Moneyback guarantee </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper support">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-umbrella"></i></div>
                        <div class="service-wrapper">
                            <h3>Support 24/7</h3>
                            <p>Call us: ( +123 ) 456 789</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col col-md-3 col-sm-6 col-xs-12">
                <div class="block-wrapper user">
                    <div class="text-des">
                        <div class="icon-wrapper"><i class="fa fa-tags"></i></div>
                        <div class="service-wrapper">
                            <h3>Member Discount</h3>
                            <p>25% on order over $199</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}



