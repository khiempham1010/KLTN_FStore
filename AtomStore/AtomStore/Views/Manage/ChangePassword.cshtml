@model AtomStore.Models.ManageViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="container">
    <div class="resetPassword">CHANGE PASSWORD</div>
    <div class="subResetPassword">Password must be more than 8 characters.</div>

    <div class="row">
        <form method="post" class="col-12 center-block" style="padding-top:3%;">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group center_div">
                <label asp-for="OldPassword" style="margin-top:3%"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group center_div">
                <label asp-for="NewPassword" style="margin-top:3%"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group center_div">
                <label asp-for="ConfirmPassword" style="margin-top:3%"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                <button style="color:white; background-color:#222222; margin-top:3%;margin-bottom:20%;padding:2%; width:50%; float:right;" type="submit" class="btn btn-default">SAVE</button>

                <button onclick="location.href='/accountsettings.html'" style="color:#222222; background-color:white; margin-top:3%;margin-bottom:20%;padding:2%; width:50%; float:right;border:solid 1px;" type="button" class="btn btn-default">CANCEL</button>
            </div>

        </form>
    </div>
</div>
